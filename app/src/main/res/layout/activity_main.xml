<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.fragment.MainActivity"
    android:id="@+id/myLayout">

    <Button
        android:id="@+id/button"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:onClick="changeFragement"
        android:text="open fragment 1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="376dp"
        android:layout_height="71dp"
        android:onClick="changeFragement"
        android:text="open fragment 2" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragement"
        android:name="com.example.lenovo.fragment.fragementTwo"
        />
</LinearLayout>
